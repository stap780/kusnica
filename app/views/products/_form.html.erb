
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-12 h3"><%= page_title %></div>
    <div class="col-6">
    <%= f.input :sku %>
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :cat %>
    <%= f.input :oldprice %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :image %>
    <%= f.input :url %>
    <%= f.input :parametr %>
    <%= f.input :ins_id %>
    <%= f.input :ins_var_id %>
    <%= f.input :ebay_id %>
    <%= f.input :etsy_id %>
</div>
</div>
  <div class="row">
  <div class="col-3 btn-group mt-5">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-primary' %>
  </div>
  </div>
<% end %>
